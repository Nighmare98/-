<Window x:Class="WpfApp1.CustomerEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
       Title="Редактирование клиента" Height="400" Width="400"
        WindowStartupLocation="CenterOwner" Background="#002efe">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Foreground="White">ФИО:</Label>
        <TextBox Grid.Row="1" Text="{Binding FullName, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,5"/>

        <Label Grid.Row="2" Foreground="White">Адрес:</Label>
        <TextBox Grid.Row="3" Text="{Binding Address}" Margin="0,0,0,5"/>

        <Label Grid.Row="4" Foreground="White">Телефон:</Label>
        <TextBox Grid.Row="5" Text="{Binding PhoneNumber}" Margin="0,0,0,5"/>

        <Label Grid.Row="6" Foreground="White">Тип услуги:</Label>
        <ComboBox Grid.Row="7" SelectedValue="{Binding ServiceType}" Margin="0,0,0,5">
            <ComboBox.ItemsSource>
                <x:Array Type="{x:Type sys:String}" xmlns:sys="clr-namespace:System;assembly=mscorlib">
                    <sys:String>Интернет</sys:String>
                    <sys:String>Телефония</sys:String>
                    <sys:String>Телевидение</sys:String>
                    <sys:String>Комплексный</sys:String>
                </x:Array>
            </ComboBox.ItemsSource>
        </ComboBox>

        <Label Grid.Row="8" Foreground="White">Абонентская плата:</Label>
        <TextBox Grid.Row="9" Text="{Binding MonthlyPayment}" Margin="0,0,0,5"/>

        <CheckBox Grid.Row="10" IsChecked="{Binding IsActive}" Margin="0,5" Foreground="White">Активный клиент</CheckBox>

        <StackPanel Grid.Row="11" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Сохранить" Width="80" Margin="5" Click="Save_Click" IsDefault="True" Foreground="White" Background="#002efe"/>
            <Button Content="Отмена" Width="80" Margin="5" IsCancel="True" Foreground="White" Background="#002efe"/>
        </StackPanel>
    </Grid>
</Window>
